# Sample dataset (replace this with your actual dataset) buying_books_data = [
['Book1', 'Book2', 'Book3'],
['Book2', 'Book3', 'Book4'],
['Book1', 'Book3', 'Book5'],
['Book2', 'Book4', 'Book5'],
]

# Convert the dataset to a list of transactions transactions = [tuple(transaction) for transaction in buying_books_data]

# Apply the FP-growth algorithm min_support = 2 # Adjust as needed
patterns = pyfpgrowth.find_frequent_patterns(transactions, min_support)

# Generate association rules min_confidence = 0.5 # Adjust as needed
rules = pyfpgrowth.generate_association_rules(patterns, min_confidence)

# Display frequent itemsets print("Frequent Itemsets:") print(patterns)
 
# Display association rules print("\nAssociation Rules:") print(rules)


